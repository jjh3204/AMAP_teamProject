<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 공통 이미지 -->
        <ImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/event_image_desc"
            android:scaleType="centerCrop" />

        <!-- 공통 제목 -->
        <TextView
            android:id="@+id/event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingTop="8dp" />

        <!-- 공통 조직 -->
        <TextView
            android:id="@+id/event_organization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingTop="4dp" />

        <!-- 공통 기간/마감일 -->
        <TextView
            android:id="@+id/event_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <!-- 공통 설명/상세 -->
        <TextView
            android:id="@+id/event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <!-- 공모전 전용 필드 -->
        <TextView
            android:id="@+id/event_award_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/event_contest_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/event_homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/event_notice_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/event_participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/event_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:visibility="gone" />

        <!-- 대외활동 전용 필드 -->
        <TextView
            android:id="@+id/activity_act_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/activity_homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/activity_interest_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/activity_notice_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/activity_participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/activity_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
