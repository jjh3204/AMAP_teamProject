<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/career_item"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/item_bottom_border">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="100dp"
            android:src="@drawable/outline_article_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/career_title"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="50dp"
            android:text="제목"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintBottom_toTopOf="@id/career_timestamp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.058" />

        <TextView
            android:id="@+id/career_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="timestamp"
            app:layout_constraintTop_toBottomOf="@id/career_title"
            app:layout_constraintStart_toStartOf="@id/career_title"
            app:layout_constraintBottom_toBottomOf="@id/imageView2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>